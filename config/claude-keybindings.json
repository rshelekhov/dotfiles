{
  "$schema": "https://www.schemastore.org/claude-code-keybindings.json",
  "$docs": "https://code.claude.com/docs/en/keybindings",
  "bindings": [
    {
      "context": "Chat",
      "bindings": {
        "ctrl+g": null,
        "ctrl+e": "chat:externalEditor",
        "alt+enter": "chat:submit"
      }
    },
    {
      "context": "Global",
      "bindings": {
        "ctrl+k ctrl+t": "app:toggleTodos",
        "ctrl+k ctrl+o": "app:toggleTranscript"
      }
    },
    {
      "context": "Task",
      "bindings": {
        "escape": "task:background"
      }
    },
    {
      "context": "DiffDialog",
      "bindings": {
        "backspace": "diff:back",
        "j": "diff:nextFile",
        "k": "diff:previousFile",
        "h": "diff:previousSource",
        "l": "diff:nextSource"
      }
    },
    {
      "context": "MessageSelector",
      "bindings": {
        "G": "messageSelector:bottom"
      }
    }
  ]
}
